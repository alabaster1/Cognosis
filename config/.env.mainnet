# Midnight Mainnet Configuration Template
# Copy this to .env when ready to deploy to mainnet

# Backend Configuration
PORT=3000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://production-db-host:27017/psifieldapp
# OR for PostgreSQL:
# DATABASE_URL=postgresql://user:password@prod-host:5432/psifieldapp

# Midnight Blockchain Configuration (MAINNET)
MIDNIGHT_NETWORK=mainnet
MIDNIGHT_NODE_URL=https://rpc.mainnet.midnight.network
MIDNIGHT_INDEXER_URL=https://indexer.mainnet.midnight.network
MIDNIGHT_PROVING_SERVER_URL=https://proving-server.mainnet.midnight.network
MIDNIGHT_CONTRACT_ADDRESS=
# Add deployed mainnet contract address here
MIDNIGHT_WALLET_SEED=
# Production wallet seed (KEEP SECURE!)

# Testnet/Mainnet Toggle
MIDNIGHT_ENVIRONMENT=mainnet

# IPFS Pinning (Production)
IPFS_GATEWAY=https://ipfs.io
PINNING_SERVICE=pinata
# Set to 'pinata' or 'blockfrost' for production
PINNING_API_KEY=
PINNING_API_SECRET=

# OpenAI (Production)
OPENAI_API_KEY=

# JWT Secret (Generate new for production!)
JWT_SECRET=

# Encryption (Generate new 32-byte key for production!)
ENCRYPTION_KEY=

# Frontend
EXPO_PUBLIC_API_URL=https://api.yourproduction domain.com
EXPO_PUBLIC_BLOCKCHAIN_NETWORK=midnight-mainnet
