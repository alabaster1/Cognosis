'use client';

/**
 * Dashboard - Experiment history and reveal interface
 */

import { useState, useEffect } from 'react';
import { useRouter } from 'next/navigation';
import Header from '@/components/layout/Header';
import { useWalletStore } from '@/store/useWalletStore';
import experimentService from '@/services/experimentService';
import apiService from '@/services/apiService';
import {
  Eye, Zap, Users, Calendar, Lock, Unlock,
  Loader2, TrendingUp, Award, Clock
} from 'lucide-react';
import { motion } from 'framer-motion';

interface Experiment {
  id: string;
  type: string;
  status: 'committed' | 'revealed' | 'verified';
  metadata: {
    title: string;
    description: string;
    targetDate?: string;
  };
  commitTimestamp: Date;
  revealTimestamp?: Date;
  aiScore?: number;
  aiExplanation?: string;
}

export default function DashboardPage() {
  const router = useRouter();
  const wallet = useWalletStore((state) => state.wallet);
  const [experiments, setExperiments] = useState<Experiment[]>([]);
  const [isLoading, setIsLoading] = useState(true);
  const [revealingId, setRevealingId] = useState<string | null>(null);
  const [error, setError] = useState('');

  useEffect(() => {
    if (!wallet) {
      router.push('/onboarding');
      return;
    }
    loadExperiments();
  }, [wallet, router]);

  const loadExperiments = async () => {
    try {
      setIsLoading(true);
      const data = await experimentService.getExperiments(wallet!.address);
      setExperiments(data || []);
    } catch (err: any) {
      console.error('Load experiments error:', err);
      setError(err.message);
    } finally {
      setIsLoading(false);
    }
  };

  const handleReveal = async (experimentId: string) => {
    try {
      setRevealingId(experimentId);
      setError('');

      const result = await experimentService.revealCommitment(experimentId);

      // Reload experiments to show updated status
      await loadExperiments();

      alert(`Accuracy Score: ${result.score}%\n\n${result.explanation}`);
    } catch (err: any) {
      console.error('Reveal error:', err);
      setError(err.message);
    } finally {
      setRevealingId(null);
    }
  };

  const getExperimentIcon = (type: string) => {
    switch (type) {
      case 'remote-viewing': return Eye;
      case 'precognition': return Zap;
      case 'telepathy': return Users;
      default: return Eye;
    }
  };

  const getStatusBadge = (status: string) => {
    switch (status) {
      case 'committed':
        return <span className="px-3 py-1 bg-blue-900/30 text-blue-400 border border-blue-500/50 rounded-full text-xs font-semibold">Committed</span>;
      case 'revealed':
        return <span className="px-3 py-1 bg-green-900/30 text-green-400 border border-green-500/50 rounded-full text-xs font-semibold">Revealed</span>;
      case 'verified':
        return <span className="px-3 py-1 bg-purple-900/30 text-purple-400 border border-purple-500/50 rounded-full text-xs font-semibold">Verified</span>;
      default:
        return <span className="px-3 py-1 bg-gray-900/30 text-gray-400 border border-gray-500/50 rounded-full text-xs font-semibold">{status}</span>;
    }
  };

  const isAfterTargetDate = (exp: Experiment) => {
    return experimentService.isAfterTargetDate(exp);
  };

  if (isLoading) {
    return (
      <div className="min-h-screen bg-black">
        <Header />
        <div className="container mx-auto px-4 py-20">
          <div className="flex items-center justify-center">
            <Loader2 className="w-8 h-8 animate-spin text-purple-500" />
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-black">
      <Header />
      <div className="container mx-auto px-4 py-20">
        {/* Header */}
        <div className="mb-12">
          <h1 className="text-4xl font-bold mb-4">Dashboard</h1>
          <p className="text-gray-400">Track your psi experiments and check accuracy when ready</p>
        </div>

        {/* Stats */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div className="bg-gradient-to-br from-purple-900/30 to-pink-900/30 border border-purple-500/50 rounded-xl p-6">
            <div className="flex items-center gap-3 mb-2">
              <TrendingUp className="w-6 h-6 text-purple-400" />
              <h3 className="text-lg font-semibold">Total Experiments</h3>
            </div>
            <p className="text-3xl font-bold">{experiments.length}</p>
          </div>

          <div className="bg-gradient-to-br from-blue-900/30 to-cyan-900/30 border border-blue-500/50 rounded-xl p-6">
            <div className="flex items-center gap-3 mb-2">
              <Clock className="w-6 h-6 text-blue-400" />
              <h3 className="text-lg font-semibold">Pending Reveal</h3>
            </div>
            <p className="text-3xl font-bold">
              {experiments.filter(e => e.status === 'committed').length}
            </p>
          </div>

          <div className="bg-gradient-to-br from-green-900/30 to-emerald-900/30 border border-green-500/50 rounded-xl p-6">
            <div className="flex items-center gap-3 mb-2">
              <Award className="w-6 h-6 text-green-400" />
              <h3 className="text-lg font-semibold">Revealed</h3>
            </div>
            <p className="text-3xl font-bold">
              {experiments.filter(e => e.status === 'revealed' || e.status === 'verified').length}
            </p>
          </div>
        </div>

        {/* Error */}
        {error && (
          <div className="mb-6 p-4 bg-red-900/20 border border-red-500 rounded-lg text-red-400">
            {error}
          </div>
        )}

        {/* Experiments List */}
        <div className="space-y-4">
          <h2 className="text-2xl font-bold mb-6">Your Experiments</h2>

          {experiments.length === 0 ? (
            <div className="bg-gray-900/50 border border-gray-800 rounded-xl p-12 text-center">
              <Eye className="w-16 h-16 text-gray-600 mx-auto mb-4" />
              <h3 className="text-xl font-semibold mb-2">No experiments yet</h3>
              <p className="text-gray-400 mb-6">Start your first psi experiment to begin tracking your abilities</p>
              <button
                onClick={() => router.push('/experiments')}
                className="px-6 py-3 bg-purple-600 rounded-lg font-semibold hover:bg-purple-700 transition-colors"
              >
                Browse Experiments
              </button>
            </div>
          ) : (
            experiments.map((exp) => {
              const Icon = getExperimentIcon(exp.type);
              const canReveal = experimentService.canReveal(exp);
              const afterTarget = isAfterTargetDate(exp);

              return (
                <motion.div
                  key={exp.id}
                  initial={{ opacity: 0, y: 20 }}
                  animate={{ opacity: 1, y: 0 }}
                  className="bg-gray-900/50 border border-gray-800 rounded-xl p-6 hover:border-purple-500/50 transition-colors"
                >
                  <div className="flex items-start justify-between">
                    <div className="flex items-start gap-4 flex-1">
                      <div className="w-12 h-12 rounded-full bg-purple-500/20 flex items-center justify-center flex-shrink-0">
                        <Icon className="w-6 h-6 text-purple-400" />
                      </div>

                      <div className="flex-1">
                        <div className="flex items-center gap-3 mb-2">
                          <h3 className="text-xl font-semibold">{exp.metadata.title}</h3>
                          {getStatusBadge(exp.status)}
                        </div>

                        <p className="text-gray-400 text-sm mb-3">{exp.metadata.description}</p>

                        <div className="flex items-center gap-6 text-sm text-gray-500">
                          <div className="flex items-center gap-2">
                            <Calendar className="w-4 h-4" />
                            <span>
                              Committed: {new Date(exp.commitTimestamp).toLocaleDateString()}
                            </span>
                          </div>

                          {exp.metadata.targetDate && (
                            <div className="flex items-center gap-2">
                              <Calendar className="w-4 h-4" />
                              <span>
                                Target: {new Date(exp.metadata.targetDate).toLocaleDateString()}
                                {afterTarget && <span className="ml-1 text-green-400">âœ“</span>}
                              </span>
                            </div>
                          )}

                          {exp.aiScore !== undefined && (
                            <div className="flex items-center gap-2">
                              <Award className="w-4 h-4" />
                              <span className="text-purple-400 font-semibold">
                                Score: {exp.aiScore}%
                              </span>
                            </div>
                          )}
                        </div>

                        {exp.aiExplanation && (
                          <div className="mt-4 p-4 bg-purple-900/20 border border-purple-500/30 rounded-lg">
                            <p className="text-sm text-gray-300">{exp.aiExplanation}</p>
                          </div>
                        )}
                      </div>
                    </div>

                    {/* Action Button */}
                    <div className="ml-4">
                      {exp.status === 'committed' && canReveal && (
                        <div>
                          <button
                            onClick={() => handleReveal(exp.id)}
                            disabled={revealingId === exp.id}
                            className={`px-6 py-3 rounded-lg font-semibold transition-all flex items-center gap-2 ${
                              afterTarget
                                ? 'bg-gradient-to-r from-green-600 to-emerald-600 hover:shadow-lg hover:shadow-green-500/50'
                                : 'bg-purple-600 hover:bg-purple-700'
                            } disabled:opacity-50 disabled:cursor-not-allowed`}
                          >
                            {revealingId === exp.id ? (
                              <>
                                <Loader2 className="w-5 h-5 animate-spin" />
                                Checking...
                              </>
                            ) : (
                              <>
                                <Unlock className="w-5 h-5" />
                                Check Accuracy
                              </>
                            )}
                          </button>
                          {!afterTarget && (
                            <p className="text-xs text-gray-500 mt-2 text-right">
                              (Before target date)
                            </p>
                          )}
                        </div>
                      )}

                      {exp.status === 'revealed' && (
                        <div className="px-6 py-3 bg-green-900/30 border border-green-500/50 rounded-lg flex items-center gap-2">
                          <Award className="w-5 h-5 text-green-400" />
                          <span className="font-semibold text-green-400">Revealed</span>
                        </div>
                      )}
                    </div>
                  </div>
                </motion.div>
              );
            })
          )}
        </div>
      </div>
    </div>
  );
}
